<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="com.example.praroop.trypbuddycom.Views.Details_Activity">
    <LinearLayout
        android:id="@+id/tv_toolbaar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/toolbar_header"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:background="@color/view_gray"
        android:layout_height="1dip"/>
    <ScrollView
        android:layout_marginTop="10dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <com.example.praroop.trypbuddycom.Customfont.TextViewSFProDisplayRegular
                android:layout_width="wrap_content"
                android:id="@+id/tv_notes"
                android:layout_marginBottom="12.5dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="22.3dp"
                android:layout_marginEnd="12.3dp"
                android:text="@string/checking"
                android:textColor="@color/black"
                android:textSize="18.3dp"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
