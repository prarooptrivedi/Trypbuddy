<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    android:layout_marginBottom="14.7dp">

    <LinearLayout
        android:id="@+id/ll_click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/testimage3"
            android:scaleType="centerCrop"
            android:id="@+id/toppicksimg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <com.example.praroop.trypbuddycom.Customfont.TextViewSFProDisplayMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hotel"
                    android:textColor="@color/text_black"
                    android:textSize="12.7sp"
                    android:id="@+id/tv_tripname"/>

                <com.example.praroop.trypbuddycom.Customfont.TextViewSFProDisplayRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11.3sp"
                    android:textColor="@color/make_gray"
                    android:text="@string/indore"
                    android:id="@+id/tv_tripcity"/>

            </LinearLayout>

            <com.example.praroop.trypbuddycom.Customfont.TextViewSFProDisplayHeavy
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_12"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="12.7sp"
                android:id="@+id/tv_tripprice"
                android:textColor="@color/text_black"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>