<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    tools:context=".Views.LoginScreen">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:background="@drawable/login"
            android:layout_height="500dip">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#80FFFFFF"/>
            <TextView
                android:id="@+id/text_logintext"

                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:text="Welcome Back"
                android:includeFontPadding="false"
                android:layout_marginTop="80dip"
                android:fontFamily="@font/opensans_bold"
                android:textColor="#203152"
                android:textSize="25dip"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text_logintxt"

                android:layout_centerHorizontal="true"
                android:layout_below="@+id/text_logintext"
                android:layout_width="wrap_content"
                android:text="please enter your credentials in the  from below"
                android:layout_marginTop="5dip"
                android:includeFontPadding="false"
                android:fontFamily="@font/opensans_regular"
                android:textColor="#203152"
                android:textSize="15dip"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="150dip"
            android:orientation="vertical"
            android:layout_marginRight="20dip"
            android:layout_marginLeft="20dip"
            android:background="@drawable/btn_round_white"
            android:layout_width="fill_parent"
            android:layout_height="470dip">
            <TextView
                android:textSize="20dip"
                android:layout_width="wrap_content"
                android:text="Name"
                android:fontFamily="@font/opensans_regular"
                android:paddingLeft="10dip"
                android:textColor="#676d77"
                android:layout_height="wrap_content"/>
            <EditText
                android:hint="Enter Name"
                android:layout_marginTop="5dip"
                android:paddingLeft="10dip"
                android:fontFamily="@font/opensans_regular"
                android:background="@android:color/transparent"
                android:layout_width="fill_parent"
                android:layout_height="60dip"/>
            <View
                android:layout_marginTop="1dip"
                android:background="#676d77"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"/>
            <TextView
                android:fontFamily="@font/opensans_regular"
                android:layout_marginTop="10dip"
                android:textSize="20dip"
                android:layout_width="wrap_content"
                android:text="Email"
                android:paddingLeft="10dip"
                android:textColor="#676d77"
                android:layout_height="wrap_content"/>
            <EditText
                android:fontFamily="@font/opensans_regular"
                android:hint="Enter Your Email Address"
                android:layout_marginTop="5dip"
                android:paddingLeft="10dip"
                android:background="@android:color/transparent"
                android:layout_width="fill_parent"
                android:layout_height="60dip"/>
            <View
                android:layout_marginTop="1dip"
                android:background="#676d77"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"/>
            <TextView
                android:fontFamily="@font/opensans_regular"
                android:layout_marginTop="10dip"
                android:textSize="20dip"
                android:layout_width="wrap_content"
                android:text="Password"
                android:paddingLeft="10dip"
                android:textColor="#676d77"
                android:layout_height="wrap_content"/>
            <EditText
                android:fontFamily="@font/opensans_regular"
                android:hint="Enter Your Password"
                android:layout_marginTop="5dip"
                android:paddingLeft="10dip"
                android:background="@android:color/transparent"
                android:layout_width="fill_parent"
                android:layout_height="60dip"/>
            <View
                android:layout_marginTop="1dip"
                android:background="#676d77"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"/>
            <TextView
                android:fontFamily="@font/opensans_regular"
                android:layout_marginTop="10dip"
                android:textSize="20dip"
                android:layout_width="wrap_content"
                android:text="Password"
                android:paddingLeft="10dip"
                android:textColor="#676d77"
                android:layout_height="wrap_content"/>
            <EditText
                android:fontFamily="@font/opensans_regular"
                android:hint="Enter Your Password"
                android:layout_marginTop="5dip"
                android:paddingLeft="10dip"
                android:background="@android:color/transparent"
                android:layout_width="fill_parent"
                android:layout_height="60dip"/>
            <View
                android:layout_marginTop="1dip"
                android:background="#676d77"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_loginfb"
            android:layout_marginTop="580dip"
            android:layout_marginBottom="30dip"
            android:layout_marginLeft="30dip"
            android:text="Sign up"
            android:textColor="@color/white"
            android:layout_marginRight="30dip"
            android:background="@drawable/btn_round"
            android:layout_width="fill_parent"
            android:layout_height="50dip"/>

    </RelativeLayout>
</RelativeLayout>