<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetEnd="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginStart="19.7dp">

        <com.example.praroop.trypbuddycom.Customfont.TextViewSFProDisplayHeavy
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/text_black"
            android:text="Tryp Buddy"
            android:textStyle="bold"/>

        <com.example.praroop.trypbuddycom.Customfont.TextViewSFProDisplayBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11.3sp"
            android:textColor="@color/text_black"
            android:text="Explore Your Trip"
            android:textStyle="bold"/>

    </LinearLayout>

    <ImageView
        android:visibility="gone"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/magnifying_glass"
        android:layout_gravity="center"
        android:layout_marginEnd="19.7dp" />

    </LinearLayout>

</android.support.v7.widget.Toolbar>