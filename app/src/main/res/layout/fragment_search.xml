<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        tools:context=".TopListOfGangtok">
        <include layout="@layout/home_page_toolbar" />
        <View
            android:layout_width="match_parent"
            android:layout_height="8.7dp"
            android:background="@drawable/rectangle_view" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/hpstoryrecyview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16.7dp"
            android:layout_marginTop="16.7dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="12.7dp"
            android:background="@drawable/rectangle_view" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/view_gray" />

        <com.example.praroop.trypbuddycom.Customfont.TextViewSFProDisplayBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="15.3dp"
            android:layout_marginTop="20dp"
            android:text="@string/gangtok"
            android:textColor="@color/text_black"
            android:textSize="18.7sp"
            android:textStyle="bold" />

        <com.example.praroop.trypbuddycom.Customfont.TextViewSFProDisplayRegular
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_marginStart="15.3dp"
            android:text="@string/_19"
            android:textColor="@color/resend_gray"
            android:textSize="10.7sp" />

        <com.example.praroop.trypbuddycom.Customfont.TextViewSFProDisplayRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginEnd="31.7dp"
            android:layout_marginStart="15.3dp"
            android:layout_marginTop="10.3dp"
            android:text="@string/a_drink_in_hand"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15.3dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <com.example.praroop.trypbuddycom.Customfont.TextViewSFProDisplayLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/top"
                android:textColor="@color/text_black"
                android:textSize="18.7sp" />

            <com.example.praroop.trypbuddycom.Customfont.TextViewSFProDisplayBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Trips"
                android:textColor="@color/text_black"
                android:textSize="18.7sp"
                android:textStyle="bold" />
        </LinearLayout>

        <com.example.praroop.trypbuddycom.Customfont.TextViewSFProDisplayRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15.3dp"
            android:layout_marginTop="2dp"
            android:text="@string/hotels_where"
            android:textColor="@color/text_black"
            android:textSize="11.3sp" />


        <!--Using recycler view for the top picks of hotels-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/toppicksrecyview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15.3dp"
            android:layout_marginEnd="17dp"
            android:nestedScrollingEnabled="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15.3dp"
            android:layout_marginTop="24.3dp"
            android:orientation="horizontal">

            <com.example.praroop.trypbuddycom.Customfont.TextViewSFProDisplayLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trip"
                android:textColor="@color/text_black"
                android:textSize="18.7sp" />

            <com.example.praroop.trypbuddycom.Customfont.TextViewSFProDisplayBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/recomm"
                android:textColor="@color/text_black"
                android:textSize="18.7sp"
                android:textStyle="bold" />

        </LinearLayout>

        <com.example.praroop.trypbuddycom.Customfont.TextViewSFProDisplayRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15.3dp"
            android:layout_marginTop="2dp"
            android:text="@string/where_you"
            android:textColor="@color/text_black"
            android:textSize="11.3sp" />

        <!--Using recycler view for the other recommendations of hotels-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/otherrecommrecyview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="33.7dp"
            android:layout_marginStart="15.4dp"
            android:layout_marginEnd="17.1dp"
            android:layout_marginTop="21.5dp"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>