<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FAFAFA"
    android:layout_height="match_parent"
    tools:context=".Views.MainScreen">
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="400dip"
        android:layout_marginTop="80dip"
        android:src="@drawable/ic_google_color_logo"
        android:layout_centerHorizontal="true"
        android:layout_height="180dip" />
    <TextView
        android:layout_below="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:text="trypbuddy"
        android:id="@+id/logoname"
        android:layout_marginTop="10dip"
        android:fontFamily="@font/sf_pro_display_bold"
        android:textColor="#203152"
        android:textSize="22dip"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_subtitle"
        android:layout_below="@+id/logoname"
        android:layout_width="wrap_content"
        android:text="find the explore within you"
        android:layout_marginTop="5dip"
        android:fontFamily="@font/sfprotext_regular"
        android:textColor="#203152"
        android:textSize="8dip"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
<Button
    android:id="@+id/btn_loginfb"
    android:layout_above="@+id/btn_loginemail"
    android:layout_marginBottom="30dip"
    android:layout_marginLeft="30dip"
    android:text="Connect With Facebook"
    android:textColor="@color/white"
    android:layout_marginRight="30dip"
    android:background="@drawable/btn_round"
    android:layout_width="fill_parent"
    android:layout_height="50dip"/>
    <Button
        android:text="Sign Up using Email"
        android:textColor="@color/white"
        android:id="@+id/btn_loginemail"
        android:layout_above="@+id/text_logintxt"
        android:layout_marginBottom="60dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:background="@drawable/btn_round_login"
        android:layout_width="fill_parent"
        android:layout_height="50dip"/>
    <TextView
        android:id="@+id/text_logintxt"
        android:layout_above="@+id/text_logintext"
        android:layout_width="wrap_content"
        android:text="I already have account"
        android:layout_marginTop="5dip"
        android:includeFontPadding="false"
        android:fontFamily="@font/opensans_regular"
        android:textColor="#203152"
        android:textSize="15dip"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
    <TextView
    android:id="@+id/text_logintext"
    android:layout_alignParentBottom="true"
        android:layout_above="@+id/text_skip"
    android:layout_marginBottom="40dip"
    android:layout_width="wrap_content"
    android:text="Login Now"
    android:includeFontPadding="false"
    android:layout_marginTop="5dip"
    android:fontFamily="@font/opensans_bold"
    android:textColor="#203152"
    android:textSize="25dip"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_skip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dip"
        android:layout_width="wrap_content"
        android:text="Skip as a guest"
        android:includeFontPadding="false"
        android:layout_marginTop="5dip"
        android:fontFamily="@font/opensans_bold"
        android:textColor="#203152"
        android:textSize="15dip"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
</RelativeLayout>