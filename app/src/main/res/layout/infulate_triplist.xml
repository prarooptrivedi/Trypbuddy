<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:background="@color/white"
    app:cardElevation="0dp"
    android:layout_marginBottom="14.7dp">

    <LinearLayout
        android:background="#e0e0e0"
        android:id="@+id/ll_click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/rv_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_tripimage"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/testimage3"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/green_cor_rect">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_star"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:layout_marginLeft="3dp"
                            android:text="4.5"/>
                    </LinearLayout>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13.5dp"
                    android:layout_marginRight="13.5dp"
                    android:layout_gravity="right">

                    <ImageView
                        android:id="@+id/iv_wishlist"
                        android:visibility="gone"
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:src="@drawable/ic_wishlist" />
                    <ImageView
                        android:id="@+id/iv_wishlist1"
                        android:visibility="gone"
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:src="@drawable/ic_passion" />
                </FrameLayout>
            </FrameLayout>
<LinearLayout
    android:layout_below="@+id/rv_first"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="0dip"
        android:orientation="vertical"
        android:layout_weight="1.7"
        android:layout_height="fill_parent">
        <TextView
            android:id="@+id/tv_tripname"
            android:layout_width="wrap_content"
            android:text="Trip Name"
            android:fontFamily="@font/sf_pro_display_bold"
            android:layout_marginTop="5dip"
            android:textSize="18dip"
            android:layout_marginLeft="10dip"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_tripcity"
            android:layout_width="wrap_content"
            android:text="Trip Name"
            android:fontFamily="@font/sf_pro_display_regular"
            android:textSize="14dip"
            android:layout_marginLeft="11dip"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_tripprice"
            android:layout_marginBottom="5dip"
            android:layout_width="wrap_content"
            android:text="Trip Name"
            android:fontFamily="@font/sf_pro_display_regular"
            android:textSize="14dip"
            android:textColor="@color/black"
            android:layout_marginLeft="11dip"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dip"
        android:layout_weight="0.3"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="fill_parent">
        <ImageView
            android:id="@+id/ic_bookmark"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_bookmark1"
            android:tint="@color/black"
            android:layout_width="40dip"
            android:scaleType="fitXY"
            android:layout_height="40dip" />
    </LinearLayout>
</LinearLayout>
