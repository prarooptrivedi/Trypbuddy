<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="com.example.praroop.trypbuddycom.Views.CheckavailabilityActivity">
    <LinearLayout
        android:id="@+id/tv_toolbaar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/toolbar_header"/>
    </LinearLayout>
    <View
        android:layout_below="@+id/tv_toolbaar"
        android:id="@+id/visible"
        android:layout_width="fill_parent"
        android:background="@color/view_gray"
        android:layout_height="1dip"/>
    <ScrollView
        android:layout_marginTop="10dip"
        android:layout_below="@+id/visible"
        android:layout_width="fill_parent"
        android:layout_marginBottom="20dip"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <com.example.praroop.trypbuddycom.Customfont.TextViewSFProDisplaySemibold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dip"
                android:layout_margin="10dip"
                android:text="Hampta Pass Treking 2019"/>

            <com.example.praroop.trypbuddycom.Customfont.TextViewSFProDisplayRegular
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dip"
                android:textSize="16dip"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="5 days 4 night"/>
            <LinearLayout
                android:layout_marginTop="10dip"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/chooseFileRect"></LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:paddingLeft="10dip"
                    android:layout_width="0dip"
                    android:background="@android:color/transparent"
                    android:layout_weight="1.7"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionSend"
                    android:inputType="text"
                    android:maxLines="1"
                    android:hint="Choose your date" />


                <Button
                    android:layout_width="0dip"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:background="@color/black"
                android:layout_width="fill_parent"
                android:layout_height="0.2dip"/>
            <LinearLayout
                android:layout_marginTop="10dip"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:background="@color/view_line_color">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dip"
                    android:layout_marginLeft="10dip"
                    android:text="Inventories" />
            </LinearLayout>
            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_marginTop="10dip"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="50dip">
                <TextView
                    android:layout_width="0dip"
                    android:text="Adult"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dip"
                    android:textSize="18dip"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_marginRight="5dip"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    >
                    <Button
                        android:layout_width="0dip"
                        android:layout_weight="0.5"
                        android:layout_height="fill_parent" />
                    <LinearLayout
                        android:layout_width="0dip"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_height="fill_parent">
                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" />
                        <View
                            android:layout_width="fill_parent"
                            android:background="@color/black"
                            android:layout_height="0.1dip"/>
                    </LinearLayout>

                    <Button
                        android:layout_marginRight="5dip"
                        android:layout_width="0dip"
                        android:layout_weight="0.5"
                        android:layout_height="fill_parent" />
                </LinearLayout>

            </LinearLayout>
            <View
                android:background="@color/black"
                android:layout_width="fill_parent"
                android:layout_height="0.2dip"/>




        </LinearLayout>
    </ScrollView>
    <com.example.praroop.trypbuddycom.Customfont.TextViewSFProDisplaySemibold
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dip"

        android:background="@drawable/rectangle_red_button"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Continue"
        android:layout_marginRight="1dip"
        android:gravity="center"
        android:id="@+id/btn_continue"
        android:textSize="16dip"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:textStyle="normal"
        android:textColor="@color/white"/>
</RelativeLayout>
