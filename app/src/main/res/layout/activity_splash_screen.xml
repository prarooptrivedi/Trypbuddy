<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/splash"
    android:layout_height="fill_parent">
    <!--bg1-->
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#80181818"/>
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="400dip"
        android:layout_marginTop="150dip"
        android:src="@drawable/ic_google_color_logo"
        android:layout_centerHorizontal="true"
        android:layout_height="180dip" />
    <TextView
        android:layout_below="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:text="trypbuddy"
        android:id="@+id/logoname"
        android:layout_marginTop="10dip"
        android:fontFamily="@font/sf_pro_display_bold"
        android:textColor="@color/white"
        android:textSize="22dip"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/logoname"
        android:layout_width="wrap_content"
        android:text="find the explore within you"
        android:layout_marginTop="5dip"
        android:fontFamily="@font/sfprotext_regular"
        android:textColor="@color/white"
        android:textSize="8dip"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
</RelativeLayout>
