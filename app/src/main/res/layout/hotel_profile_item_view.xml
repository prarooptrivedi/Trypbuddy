<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="27dp"
            android:layout_marginStart="27dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hpimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/minisplit" />

            <com.example.praroop.trypbuddycom.Customfont.TextViewSFProDisplayMedium
                android:id="@+id/hpname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="7.6dp"
                android:gravity="center"
                android:text="AC"
                android:textColor="@color/black"
                android:textSize="9.3sp" />

            <com.example.praroop.trypbuddycom.Customfont.TextViewSFProDisplayMedium
                android:id="@+id/hpnotxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="9.3sp" />

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="40dp"
            android:background="@color/view_gray" />

    </LinearLayout>


</LinearLayout>